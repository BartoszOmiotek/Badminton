<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fui_bgGitHub"
    tools:context=".LiveScore.LiveScoreActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/match_court"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/court_shadow_middle" />

    <TextView
        android:id="@+id/p1_name"
        android:layout_width="218dp"
        android:layout_height="17dp"
        android:layout_marginStart="210dp"
        android:text="p1_name"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/p1_set1_points"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/p2_name"
        android:layout_width="218dp"
        android:layout_height="17dp"
        android:layout_marginStart="210dp"
        android:text="p2_name"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/p2_set1_points"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/p1_court_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="88dp"
        android:background="@color/colorLiveScoreCourt"
        android:gravity="center"
        android:text="p1_court_top"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/middle_guideline"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/match_court"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/p2_court_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="83dp"
        android:background="@color/colorLiveScoreCourt"
        android:gravity="center"
        android:text="p2_court_top"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/middle_guideline"
        app:layout_constraintTop_toTopOf="@+id/match_court" />

    <TextView
        android:id="@+id/p1_court_bot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLiveScoreCourt"
        android:gravity="center"
        android:text="p1_court_down"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/middle_guideline"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/p2_court_bot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLiveScoreCourt"
        android:gravity="center"
        android:text="p2_court_down"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/middle_guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/p1_set1_points"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/p1_set2_points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/p1_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1_set2_points"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/p1_set3_points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p1_set1_points"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1_set3_points"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/p1_set2_points"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2_set3_points"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/p2_set2_points"
        app:layout_constraintTop_toBottomOf="@+id/p1_set3_points" />

    <TextView
        android:id="@+id/p2_set1_points"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/p2_set2_points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/p2_name"
        app:layout_constraintTop_toBottomOf="@+id/p1_set1_points" />

    <TextView
        android:id="@+id/p2_set2_points"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/p2_set3_points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p2_set1_points"
        app:layout_constraintTop_toBottomOf="@+id/p1_set2_points" />

    <Button
        android:id="@+id/p1_dec_point_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/p1_court_bot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1_inc_point_btn" />

    <Button
        android:id="@+id/p1_inc_point_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/p1_dec_point_btn"
        app:layout_constraintEnd_toStartOf="@+id/p1_court_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/p2_dec_point_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p2_court_bot"
        app:layout_constraintTop_toBottomOf="@+id/p2_inc_point_btn" />

    <Button
        android:id="@+id/p2_inc_point_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/p2_dec_point_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p2_court_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <android.support.constraint.Guideline
        android:id="@+id/middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/p1_points"
        android:layout_width="46dp"
        android:layout_height="51dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/middle_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2_points"
        android:layout_width="46dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/middle_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

</android.support.constraint.ConstraintLayout>