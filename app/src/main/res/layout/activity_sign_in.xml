<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fui_bgGitHub"
    tools:context=".Login.SignInActivity">

    <Button
        android:id="@+id/button8"
        style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
        android:text="@string/fui_sign_in_with_google"
        android:textAlignment="viewStart"
        android:theme="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="561dp" />

    <Button
        android:id="@+id/button9"
        style="@style/FirebaseUI.Button.AccountChooser.FacebookButton"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/com_facebook_button_icon"
        android:text="@string/fui_sign_in_with_facebook"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="630dp" />

    <Button
        android:id="@+id/button10"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/email_icon"
        android:text="@string/fui_sign_in_with_email"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="419dp" />

    <include
        android:id="@+id/include3"
        layout="@layout/toolbar"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/com_facebook_smart_device_instructions_or"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="522dp" />
</android.support.constraint.ConstraintLayout>